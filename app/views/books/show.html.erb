<% if flash[:notice] %>
  <p id = "notice" >
    <%= flash[:notice] %>
  </p>
<% end %>
<p id="notis"></p>
<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>
            name
          </th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>
            introduction
          </th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
        <div id = "errors_explanation" >
          <%= pluralize(@book.errors.count, "error") %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book, method: :post do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <table class="table">
      <h2>Book detail</h2>
        <tr>
          <td><% if @user.image.attached? %>
            <%= image_tag @user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %><br>
          <%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to @books.title, book_path(@books.id) %></td>
          <td><%= @books.body %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@books.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>