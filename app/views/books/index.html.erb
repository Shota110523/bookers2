<% if flash[:notice] %>
  <p id = "notice" >
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>User info</h1>
<% if user.image.attached? %>
    <%= image_tag u.image, size: "100x100" %>
<% else %>
    <%= image_tag 'no_image', size: "100x100" %>
<% end %>
<table>
  <tr>
    <th>
      <h4>name</h4>
    </th>
    <th>
      <h4>introduction</h4>
    </th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
  </tr>
  <% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <div id = "errors_explanation" >
    <%= pluralize(@book.errors.count, "error") %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @books, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
