<% if flash[:notice] %>
  <p id = "notice" >
    <%= flash[:notice] %>
  </p>
<% end %>
<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
      <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <table>
        <tr>
          <th>
            name
          </th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>
            introduction
          </th>
          <th><%= current_user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h2>New book</h2>
      <% if @book.errors.any? %>
        <div id = "errors_explanation" >
          <%= pluralize(@book.errors.count, "error") %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book, method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <table class="table table-striped">
      <h2>Books</h2>
        <tr>
          <th></th>
          <th>
            Title
          </th>
          <th>
            Opinion
          </th>
          <th colspan="3"></th>
        </tr>

        <% @books.each do |book| %>
        <tr>
          <td><% if book.user.image.attached? %>
            <%= image_tag book.user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>